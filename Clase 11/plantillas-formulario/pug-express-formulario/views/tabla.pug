h2(style="color:crimson;")="Historial"
if personas.length
    div(class="table-responsive")
        table(class="table table-dark")
            tr(style="color: yellow;")
                th="Nombre"
                th="Apellido"
                th="Edad"
            each persona in personas                
                tr
                    td=persona.nombre
                    td=persona.apellido
                    td=persona.edad
else
    h3(class="alert alert-danger")="no se encontraron datos"
